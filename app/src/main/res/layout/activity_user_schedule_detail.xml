<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.UserScheduleDetailActivity"
    android:theme="@style/AppTheme">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:fitsSystemWindows="true">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/list_divider">
                        <ImageView
                            android:id="@+id/warning_icon"
                            android:layout_marginTop="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/warning"/>

                        <TextView
                            android:id="@+id/late_title"
                            android:text="遅刻"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_toRightOf="@+id/warning_icon"/>
                        <LinearLayout
                            android:id="@+id/late_info_container"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_toRightOf="@+id/late_title">
                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/late_minus_btn"
                                android:text="-"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                            <TextView
                                android:id="@+id/late_count"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:gravity="center"/>
                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/late_plus_btn"
                                android:text="+"
                                android:textSize="20dp"
                                android:textColor="@android:color/holo_blue_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/absent_title"
                            android:text="欠席"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_below="@+id/late_title"
                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="16dp"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/warning_icon"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_toRightOf="@+id/absent_title"
                            android:layout_marginTop="16dp"
                            android:layout_below="@+id/late_title">
                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/absent_minus_btn"
                                android:text="-"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                            <TextView
                                android:id="@+id/absent_count"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:gravity="center"/>
                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/absent_plus_btn"
                                android:text="+"
                                android:textSize="20dp"
                                android:textColor="@android:color/holo_blue_dark"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp">
                        <ImageView
                            android:id="@+id/textsms_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/textsms"/>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/memo_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/textsms_icon"
                            app:hintTextAppearance="@style/EditTextHint">
                            <EditText
                                android:id="@+id/memo_edit_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:hint="メモ"
                                android:inputType="textMultiLine"
                                android:minLines="3"
                                android:maxLines="6"
                                android:theme="@style/EditTextColorControl"/>
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                </LinearLayout>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|end"
            app:srcCompat="@mipmap/save_icon"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!--Content-Wrapper-->
            <LinearLayout
                android:id="@+id/content_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <!--上のEditTextにfocusが当たるのを防ぐ-->
                <requestFocus/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
    <ProgressBar
        android:id="@+id/update_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:visibility="gone"/>
</FrameLayout>