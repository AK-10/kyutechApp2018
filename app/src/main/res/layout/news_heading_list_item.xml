<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical">
    <com.gorigolilagmail.kyutechapp2018.view.customView.CircularTextView
        android:id="@+id/circularTextView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="呼"
        android:gravity="center"
        android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/news_heading"
        android:text="学生呼び出し"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circularTextView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/updated_date"
        android:text="2018/3/10 18:00"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:layout_width="100dp"
        android:textAlignment="textEnd"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/news_heading"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
