<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@android:color/black</item>
        <!--ボタンの色-->
        <item name="android:colorPrimary">@color/kyutech_main_color</item>
        <item name="android:colorButtonNormal">@color/kyutech_main_color_dark</item>
        <item name="android:colorAccent">@color/kyutech_main_color</item>

        <!--ステータスバーの色変更(通知が来るところ)-->
        <item name="android:statusBarColor">@color/kyutech_main_color_dark</item>

        <!--Toolbarの文字の色を変える-->
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>

        <!--Activity起動時の一瞬のブランクをなくす-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--ツールバーの...アイコンの色を変える-->
    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>


    <!--ツールバーの色-->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/kyutech_main_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerAsEditText" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:drawable/editbox_background_normal</item>
    </style>


</resources>
